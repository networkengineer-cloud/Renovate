{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "managers": ["regex"],
      "regexManagers": [
        {
          "fileMatch": ["^images\\.yaml$"],
          "matchStrings": ["(?<depName>\\S+):(?<currentValue>\\S+)"],
          "datasourceTemplate": "docker"
        }
      ]
    }
  ]
}
